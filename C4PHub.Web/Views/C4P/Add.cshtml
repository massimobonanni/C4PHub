@model C4PHub.Web.Models.C4P.AddModel
@{
    ViewData["Title"] = "Add New C4P";
}

<h1>Add New C4P</h1>
<hr />
<form asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.IsUserAuthenticated)
    {
        @Html.HiddenFor(m => m.UserPublished)
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="UserPublished" class="control-label"></label>
                    <input asp-for="UserPublished" class="form-control" />
                    <span asp-validation-for="UserPublished" class="text-danger"></span>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <input asp-for="AddIfComplete" />@Html.DisplayNameFor(model=>model.AddIfComplete)
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
